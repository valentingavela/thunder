{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "incremental": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["es2015", "es7", "dom", "esnext"],
    "typeRoots": ["../node_modules/@types"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "allowJs": false,

    "removeComments": true,  
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules"]
}